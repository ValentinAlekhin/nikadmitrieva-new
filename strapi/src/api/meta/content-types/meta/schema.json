{
  "kind": "singleType",
  "collectionName": "metas",
  "info": {
    "singularName": "meta",
    "pluralName": "metas",
    "displayName": "Meta"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "minLength": 10,
      "default": "Nika Dmitrieva"
    },
    "description": {
      "type": "richtext",
      "required": true,
      "minLength": 30
    },
    "image": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": false,
      "required": true
    },
    "siteName": {
      "type": "string",
      "required": true,
      "minLength": 4
    }
  }
}
